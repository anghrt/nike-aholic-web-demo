    <script>
        // H√†m chuy·ªÉn ƒë·ªïi tab
        function setActiveTab(tabId) {
            // ·∫®n t·∫•t c·∫£ n·ªôi dung tab
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // G·ª° active kh·ªèi t·∫•t c·∫£ icon nav
            document.querySelectorAll('.nav-icon').forEach(icon => {
                icon.classList.remove('active');
            });
            
            // ·∫®n/Hi·ªán FAB (·∫®n n·∫øu ·ªü tab Nike Bot)
            const fab = document.getElementById('nike-bot-fab');
            if (tabId === 'nike-bot') {
                fab.classList.add('hidden');
            } else {
                fab.classList.remove('hidden');
            }


            // Hi·ªÉn th·ªã n·ªôi dung tab ƒë∆∞·ª£c ch·ªçn
            const targetContent = document.getElementById(tabId);
            if (targetContent) {
                targetContent.classList.add('active');
                // Cu·ªôn v·ªÅ ƒë·∫ßu trang m·ªõi
                document.getElementById('content-area').scrollTop = 0;
            }

            // ƒê·∫∑t active cho icon nav t∆∞∆°ng ·ª©ng
            const targetNav = document.querySelector(`.nav-icon[data-tab="${tabId}"]`);
            if (targetNav) {
                targetNav.classList.add('active');
            }
            
            // ƒê·∫£m b·∫£o tab Community lu√¥n m·ªü sub-content Stories khi chuy·ªÉn sang
            if (tabId === 'community') {
                // M·ªü m·∫∑c ƒë·ªãnh Stories
                showCommunitySubContent('stories');
            }
        }
        
        // H√†m chuy·ªÉn ƒë·ªïi Sub-Content trong Community Tab
        function showCommunitySubContent(subId) {
            // ·∫®n t·∫•t c·∫£ sub-content
            document.querySelectorAll('.community-sub-content').forEach(content => {
                content.classList.add('hidden');
                content.classList.remove('active');
            });

            // G·ª° active kh·ªèi t·∫•t c·∫£ sub-nav buttons
            document.querySelectorAll('.sub-nav-btn').forEach(btn => {
                btn.classList.remove('bg-gray-700', 'text-white');
                btn.classList.add('text-gray-500', 'hover:bg-gray-800');
            });
            
            // Hi·ªÉn th·ªã sub-content ƒë∆∞·ª£c ch·ªçn
            const targetSubContent = document.getElementById(subId);
            if (targetSubContent) {
                targetSubContent.classList.remove('hidden');
                targetSubContent.classList.add('active');
            }

            // ƒê·∫∑t active cho button t∆∞∆°ng ·ª©ng
            const targetBtn = document.querySelector(`.sub-nav-btn[data-target="${subId}"]`);
            if (targetBtn) {
                targetBtn.classList.add('bg-gray-700', 'text-white');
                targetBtn.classList.remove('text-gray-500', 'hover:bg-gray-800');
            }
        }

        // Listener cho Sub-Navigation Buttons
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.sub-nav-btn').forEach(button => {
                button.addEventListener('click', (e) => {
                    const targetId = e.target.getAttribute('data-target');
                    showCommunitySubContent(targetId);
                });
            });
            
            // Kh·ªüi t·∫°o tab m·∫∑c ƒë·ªãnh
            setActiveTab('home'); 
        });
    </script>
</body>
